<Window x:Class="ToDoList.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ToDoList"
        d:DataContext="{d:DesignInstance Type=local:AddNoteViewModel}"
        ResizeMode="NoResize"
        Style="{DynamicResource mainTheme}"
        mc:Ignorable="d"
        Title="AddNoteWindow" Height="384" Width="400">
    <Border Padding="5">
        <Border Style="{DynamicResource borderTheme}">
            <DockPanel>
            <StackPanel DockPanel.Dock="Top" Margin="5">
                <Label Content="Добавление задачи" FontSize="26" Style="{DynamicResource labelTheme}"/>
                <Separator Background="DarkBlue"/>
            </StackPanel>
            <UniformGrid DockPanel.Dock="Bottom" Rows="1" Margin="15" HorizontalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Content="Применить" IsDefault="True" Command="{Binding AddCommand}"/>
                <Button Style="{StaticResource MaterialDesignRaisedSecondaryButton}" Margin="5 0 0 0" Content="Отменить" Command="{Binding CancelCommand}" IsCancel="True"/>
            </UniformGrid>
                <Grid Margin="5">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="Grid.Column" Value="0">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0 5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="0 5"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Style="{DynamicResource textBoxTheme}" 
                             md:HintAssist.Hint="Название задачи"
                             md:HintAssist.FloatingOffset="0 -15"
                             Text="{Binding Note.Name}" 
                             Grid.Column="1" 
                             Grid.Row="0"/>
                    <ComboBox Grid.Row="1" 
                              Style="{DynamicResource comboBoxTheme}"
                              md:HintAssist.Hint="Приоритет"
                                md:HintAssist.FloatingOffset="0 -15"
                              ItemsSource="{Binding PriorityItems}" 
                              SelectedItem="{Binding Note.Priority}">
                        
                    </ComboBox>
                </Grid>
        </DockPanel>
        </Border>
    </Border>
</Window>
