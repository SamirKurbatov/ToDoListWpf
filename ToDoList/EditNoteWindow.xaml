<Window x:Class="ToDoList.EditNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="EditNoteWindow" Height="200" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Введите текст на который хотите изменить"/>
        <TextBox x:Name="editText"/>
        <StackPanel Margin="0 5 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AgreeButton" Click="AgreeButton_Click">Применить</Button>
            <Button x:Name="CancelWindowBtn" Click="CancelWindowBtn_Click" Margin="10 0 0 0">Отмена</Button>
        </StackPanel>
    </StackPanel>
</Window>
